APP_NAME="Luxe Hair Studio"
APP_ENV=production
APP_KEY=base64:htTJwaggqgdq86I1tSjzVHFsgqJvxqBaPXIAt2QyU38=
APP_DEBUG=false
APP_URL=https://luxe-hair-studio-app.azurewebsites.net

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

LOG_CHANNEL=single
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Azure Database for MySQL (Primary database for relational data)
DB_CONNECTION=mysql
DB_HOST=your-mysql-server.mysql.database.azure.com
DB_PORT=3306
DB_DATABASE=luxe_hair_studio
DB_USERNAME=luxeadmin@your-mysql-server
DB_PASSWORD=YourSecurePassword123!

# Azure Cosmos DB with MongoDB API (For services and deals)
DB_MONGO_CONNECTION=mongodb
DB_MONGO_HOST=your-cosmosdb-account.mongo.cosmos.azure.com
DB_MONGO_PORT=10255
DB_MONGO_DATABASE=luxe_hair_studio
DB_MONGO_USERNAME=your-cosmosdb-account
DB_MONGO_PASSWORD=your_primary_key

# Azure Redis Cache (For sessions and caching)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=azure
QUEUE_CONNECTION=sync

CACHE_STORE=redis
CACHE_PREFIX=luxe_hair_

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=your-redis-cache.redis.cache.windows.net
REDIS_PASSWORD=your_redis_primary_key
REDIS_PORT=6380

# Mail configuration (using SendGrid on Azure)
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=your_sendgrid_api_key
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@luxehairstudio.com"
MAIL_FROM_NAME="${APP_NAME}"

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=luxehairstorage
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key
AZURE_STORAGE_CONTAINER=salon-uploads
AZURE_STORAGE_URL=https://luxehairstorage.blob.core.windows.net

# Application Insights (Azure monitoring)
APPINSIGHTS_INSTRUMENTATIONKEY=your_instrumentation_key

# Vite
VITE_APP_NAME="${APP_NAME}"

# Security settings for production
APP_FORCE_HTTPS=true
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax